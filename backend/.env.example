# 环境配置
PORTAL_ENV=development

# 数据库配置
DATABASE_URL=postgresql://portal:portal@localhost:5432/portal

# Gitea 配置
GITEA_URL=http://localhost:3000
GITEA_TOKEN=your-gitea-token-here
GITEA_WEBHOOK_SECRET=your-webhook-secret
GITEA_SSH_INTERNAL_HOST=gitea-ssh.gitea.svc.cluster.local
GITEA_SSH_INTERNAL_PORT=2222
GITEA_ADMIN_USER=gitea_admin
GITEA_ADMIN_PASSWORD=changeme

# MinIO 配置
MINIO_ENDPOINT=localhost:9000
MINIO_PUBLIC_ENDPOINT=https://minio.hydrosim.cn
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123
MINIO_BUCKET=hydrosim-platform
MINIO_SECURE=false

# Kubernetes 配置
K8S_NAMESPACE=hydrosim
K8S_IN_CLUSTER=false
K8S_CONFIG_PATH=G:/Gradutoin-Project/hydrosim-platform/backend/.kube/config

# Student PVC
STUDENT_PVC_ENABLED=true
STUDENT_PVC_SIZE=1Gi
# STUDENT_PVC_STORAGE_CLASS=local-path
STUDENT_PVC_MOUNT_PATH=/data

# Student TLS (wildcard cert secret name in students-gd/students-cd)
# STUDENT_TLS_SECRET_NAME=student-wildcard-tls

# JWT 配置
JWT_SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 管理员账号
PORTAL_ADMIN_USER=teacher
PORTAL_ADMIN_PASSWORD=changeme

# 其他配置
ALLOW_DEMO_LOGIN=true
LOG_LEVEL=INFO
